<?xml version="1.0"?>
<Template originator   = "Dave Thomas"
          created      = "19/02/2014"
          lastModified = "19/02/2014">
  
  <!-- Template Header -->
  <TemplateConfiguration>
    <_Name>F# Portable Library</_Name>
    <_Category>F#</_Category>
    <Icon>md-project-library|res:fsharp-icon-32.png</Icon>
    <LanguageName>F#</LanguageName>
    <_Description>Creates a library that can be used in Windows, Silverlight, Windows Phone, MonoTouch and Mono for Android</_Description>
    <DefaultFilename>PortableLibrary</DefaultFilename>
  </TemplateConfiguration>
  
  <!-- Actions -->
  <Actions>
    <Open filename = "PortableLibrary1.fs"/>
  </Actions>
  
  <!-- Template Content -->
  <Combine name = "${ProjectName}" directory = ".">
    <Options>
      <StartupProject>${ProjectName}</StartupProject>
    </Options>
    
    <Project name = "${ProjectName}" directory = "." type = "PortableDotNet">
      <Options Target = "Library" TargetFrameworkVersion = ".NETPortable,Version=v4.0,Profile=Profile136"/>
      <References>
        <Reference type="Gac" refto="FSharp.Core, Version=2.3.5.1, Culture=neutral, PublicKeyToken=b03f5f7f11d50a3a" />
      </References>
      <Files>
        <FileTemplateReference TemplateID="FSharpAssemblyInfo" name="AssemblyInfo.fs" />
       <File name = "PortableLibrary1.fs" AddStandardHeader="True">
       	<![CDATA[namespace ${ProjectName}

type Class1() = 
    member this.X = "F#"
]]></File>
	   <File name = "Script.fsx" AddStandardHeader="True">
	   <![CDATA[// Learn more about F# at http://fsharp.net. See the 'F# Tutorial' project
// for more guidance on F# programming.

#load "PortableLibrary1.fs"
open ${ProjectName}
]]></File>
      </Files>
    </Project>
  </Combine>
</Template>
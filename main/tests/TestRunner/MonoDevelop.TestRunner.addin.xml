<Addin id          = "TestRunner"
       namespace   = "MonoDevelop"
       name        = "Test Runner"
       copyright   = "MIT/X11"
       url         = "http://www.monodevelop.com"
       description = "Test runner for the MonoDevelop unit tests"
       category    = "MonoDevelop Core"
       isroot      = "false"
       version     = "4.0"
       compatVersion = "4.0">

	<Dependencies>
		<Addin id="Core" version="4.0"/>
		<Addin id="Ide" version="4.0"/>
		<Addin id="SourceEditor2" version="4.0"/>
		<Addin id="Refactoring" version="4.0"/>
		<Addin id="CSharpBinding" version="4.0"/>
		<Addin id="AspNet" version="4.0"/>
		<Addin id="AspNet.Mvc" version="4.0"/>
		<Addin id="Debugger" version="4.0"/>
		<Addin id="Debugger.Soft.AspNet" version="4.0"/>
		<Addin id="Deployment" version="4.0"/>
		<Addin id="Deployment.Linux" version="4.0"/>
		<Addin id="DesignerSupport" version="4.0"/>
		<Addin id="TextTemplating" version="4.0"/>
		<Addin id="VersionControl" version="4.0"/>
		<Addin id="VersionControl.Git" version="4.0"/>
		<Addin id="XmlEditor" version="4.0"/>
	</Dependencies>
	
	<Extension path = "/MonoDevelop/Core/Applications">
		<Application id = "run-md-tests" class = "MonoDevelop.Tests.TestRunner.Runer" description = "Runs the MonoDevelop unit test suite"/>
	</Extension>
</Addin>

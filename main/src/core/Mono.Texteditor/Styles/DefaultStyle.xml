 <EditorStyle name="Default" _description="Bright and friendly, just like Xamarin.">

	<Color name="butter1" value="#fce94f"/>
	<Color name="butter2" value="#edd400"/>
	<Color name="chameleon1" value="#8ae234"/>
	<Color name="chameleon2" value="#73d216"/>
	<Color name="chameleon3" value="#4e9a06"/>
	<Color name="skyblue1" value="#729fcf"/>
	<Color name="skyblue2" value="#3465a4"/>
	<Color name="plum2" value="#75507b"/>
	<Color name="scarletred1" value="#ef2929"/>
	<Color name="aluminium1" value="#eeeeec"/>
	<Color name="aluminium2" value="#d3d7cf"/>
	<Color name="aluminium3" value="#babdb6"/>
	<Color name="aluminium4" value="#888a85"/>
	<Color name="aluminium5" value="#555753"/>
	<Color name="aluminium6" value="#2e3436"/>
	
	<Color name="text-black" value="#444"/>
	<Color name="comment-gray" value="#999988"/>
	<Color name="literal-orange" value="#F57E00"/>
	<Color name="keyword-teal" value="#009695"/>
	<Color name="selection-bg" value="#b5d5ff"/>
	<Color name="invalid-red" value="#C44D58"/>
	
	<!-- color styles -->
	<Style name="text" color="text-black" bgColor="white">
		<Style name="background" color="white">
			<Style name="readonly" color="aluminium1"/>
			<Style name="searchresult-main" color="butter1"/>
			<Style name="searchresult" color="butter2"/>
		</Style>
		<Style name="selection" bgColor="selection-bg"/>
		<Style name="selection.inactive" bgColor="aluminium2"/>
		<Style name="link" color="blue"/>
		<Style name="punctuation" color="aluminium6"/>
		<Style name="preprocessor" color="#c12dad" weight="regular">
			<Style name="keyword" weight="bold"/>
		</Style>
    <Style name="markup" color="comment-gray" weight="italic">
      <Style name="tag"/>
    </Style>
	</Style>
	
	<Style name="tooltip" color="black" bgColor="#feffe9"/>
	
	<Style name="completion" color="#434343" bgColor="#F0F6F8">
		<Style name="highlight" color="#BA3373"/>
		<Style name="selection" color="#f8fcfc" bgColor="#dff4f0">
			<Style name="border" color="#C9C9C9"/>
		</Style>
		<Style name="selection.inactive" color="#f9f9f9" bgColor="#e6e6e6">
			<Style name="border" color="#bebebe"/>
		</Style>
	</Style>
	
	<Style name="template" color ="black" bgColor="#fdfaed">
		<Style name="tag" color ="black" bgColor="#fdf0bd"/>
	</Style>
	
	<Style name="diff">
		<Style name="line-added" color="skyblue2"/>
		<Style name="line-removed" color="scarletred1"/>
		<Style name="line-changed" color="plum2"/>
		
		<Style name="header" color="chameleon3" weight="bold"/>
		<Style name="header-seperator" color="chameleon3" weight="bold"/>
		<Style name="header-oldfile" color="scarletred1" weight="bold"/>
		<Style name="header-newfile" color="skyblue2" weight="bold"/>
		
		<Style name="location" color="plum2" weight="bold"/>
	</Style>
	
	<Style name="marker">
		<Style name="line" color="aluminium1"/>
		<Style name="line.changed" color="chameleon2"/>
		<Style name="line.dirty" color="butter2"/>
	
		<Style name="ruler" color="aluminium3"/>
		<Style name="bracket" color="aluminium2" bgColor="aluminium1"/>
		<Style name="usages" color="aluminium1" bgColor="#f5f5f5"/>
		
		<Style name="bookmark.color1" color="white"/>
		<Style name="bookmark.color2" color="skyblue1"/>
		
		<Style name="underline" color="invalid-red">
			<Style name="error" color="invalid-red"/>
			<Style name="warning" color="butter2"/>
			<Style name="suggestion" color="chameleon2" />
			<Style name="hint" color="skyblue2" />
		</Style>
		
		<Style name="template">
			<Style name="primary_template" color="chameleon3" bgColor="chameleon2"/>
			<Style name="primary_highlighted_template" color="chameleon3" bgColor="chameleon1"/>
			<Style name="secondary_template" color="aluminium2" bgColor="white"/>
			<Style name="secondary_highlighted_template" color="aluminium3" bgColor="aluminium1"/>
		</Style>
	</Style>
	
	<Style name="bubble">
		<Style name="warning" color="aluminium5" bgColor="#f4eeda"/>
		<Style name="error" color="aluminium5" bgColor="#f5eae7"/>
	</Style>
	
	<Style name="linenumber" color="aluminium4" bgColor="white"/>
	
	<Style name="iconbar" color="aluminium1"/>
	<Style name="iconbar.separator" color="aluminium3"/>

	<Style name="fold" color="aluminium4" bgColor="white"/>
	<Style name="fold.margin" color="#2a669a" bgColor ="#b1cce3" />
	
	<Style name="comment" color="comment-gray" weight="italic">
		<Style name="line"/>
		<Style name="block"/>
		<Style name="doc"/>
		<Style name="tag">
			<Style name="line"/>
			<Style name="block"/>
			<Style name="doc"/>
		</Style>
		<Style name="keyword" color="text-black" weight="italic bold" />
	</Style>
	
	
	<Style name="constant" color="literal-orange"/>
	<Style name="string" color="literal-orange"/>
	
  <Style name="keyword" color="keyword-teal"/>
	<Style name="keyword.type" color="skyblue2"/>
	<Style name="keyword.semantic.type" color="skyblue2"/>
	<Style name="constant.language" color="skyblue2"/>
	<Style name="constant.language.void" color="skyblue2"/>
	
	<Style name="keyword.semantic.extensionthis" color="keyword-teal" />
	
	<Style name="keyword.access" color="keyword-teal" />
  <!-- text-black until we can find a good color -->
	<Style name="keyword.semantic.field" color="text-black"/>

  <Style name="keyword.semantic.property" color="text-black"/>
  <Style name="keyword.semantic.property.declaration" color="text-black"/>

  <Style name="keyword.semantic.method" color="text-black"/>
  <Style name="keyword.semantic.method.declaration" color="text-black"/>
		
  <Style name="keyword.semantic.error" color="invalid-red"/>
</EditorStyle>
